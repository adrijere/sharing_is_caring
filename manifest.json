{
    "name": "SocialGems",
    "description": "Sharing ressources from Linkedin!",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": [
        "activeTab",
        "storage",
        "declarativeContent",
        "notifications"
    ],
    "icons" : {
        "16": "ruby.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_title": "Click here to open menu"
    },
    "content_scripts": [
        {
          "matches": ["https://*.linkedin.com/*"],
          "js": ["getInformationsFromUrl.js"],
          "run_at": "document_idle"
        }
    ]
}
